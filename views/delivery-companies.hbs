<div class="row">
    <div class="col">

    </div>
    <div class="col-auto">
        <a href="create-delivery" class="btn btn-success">Create Company</a>
    </div>
</div>
<br>
<div class="card">
    <div class="card-body">
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phones</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each companies }}
                <tr>
                    <td>{{ name }}</td>
                    <td>{{ email }}</td>
                    <td>{{#each phone }} {{ this }}, {{/each }}</td>
                    <td>{{ address }}</td>
                    <td>
                        <a href="/manage-companies/{{ id }}"> <i class="bi bi-pencil-fill "></i></a>
                        <a href="/price-list/{{ id }}"><i class="bi bi-eye-fill"></i></a>
                    </td>
                </tr>
                {{/each }}

            </tbody>
        </table>
    </div>
</div>